<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedProductsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="370dp"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
               />


            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
         />

            <TextView
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"

                android:textSize="20sp"
               />

            <TextView
                android:id="@+id/otherdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/details"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/minimumqty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/otherdetail"
                android:text="Minimum Order Quantity : "
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/getqty"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/minimumqty"
                android:background="@drawable/otpsquare"
                android:textAlignment="center"
                android:padding="7dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/minimumqty"
                android:layout_marginLeft="25dp"
                android:text="Add Qty : "
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/editqty"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:background="@drawable/otpsquare"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editqty"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />


            <TextView
                android:id="@+id/storeaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sold"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/exp_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeaddress"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="70dp"
            android:id="@+id/buynow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/otpsquare"
            android:backgroundTint="#FDBF04"
            android:text="BUY NOW"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
